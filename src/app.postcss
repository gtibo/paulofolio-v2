/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;


html {
  font-size: 1.1em; 
}

body{
  font-family: "Red Hat Display";
  @apply
  text-default bg-deepgreen h-full;
}

a {
  @apply text-accent;
}

::-webkit-scrollbar {
  width: 5px;
  height: 8px;
  background-color: rgba(0,0,0,0.5);
}

::-webkit-scrollbar-thumb {
    background: #000;
    @apply bg-accent;
}
